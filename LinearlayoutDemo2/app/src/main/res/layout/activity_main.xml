<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bridgelabz.linearlayoutdemo2.MainActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number 1"
        android:padding="@dimen/activity_vertical_margin" />


    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number 2"
        android:padding="@dimen/activity_vertical_margin" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sum"
                android:text="+"
                android:layout_column="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/sub"
                android:layout_gravity="center_horizontal"
                android:layout_column="8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/mul"
                android:layout_column="18"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="/"
                android:id="@+id/div"
                android:layout_column="8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink">



            <Button
                android:id="@+id/press"
                android:text="press for intent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/pink"
                android:background="@color/black"
                android:layout_weight="1"

                android:layout_column="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sms"
                android:id="@+id/smsbutton"
                android:layout_gravity="center_horizontal"
                android:layout_column="8" />

            <Button
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:text="expilicintent"
                android:id="@+id/Ebutton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_column="12" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:background="@color/yellow">


        <Button
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email" />

        <ToggleButton
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Wifi off"

                android:textOn="Wifi ON" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bundle"
            android:id="@+id/bundle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Activity For Result"
            android:id="@+id/activityResult" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.32"
        android:background="#00f0ff">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/date"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="63dp"
            android:text="Time"
            android:id="@+id/time_picker" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:id="@+id/progress" />

        <Button
            android:id="@+id/spinner"
            android:text="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </TableRow>



</LinearLayout>